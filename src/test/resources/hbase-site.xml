<configuration>
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://dm105:9000/hbase</value>
    <description>指定hbase文件存储根目录</description>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
    <description>hbase是否使用集群模式</description>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>dm105,dm106,dm107</value>
    <description>zookeeper地址</description>
  </property>
</configuration>
